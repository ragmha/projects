{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/",
      ]
    },
  },
  "include": [
    "src",
    "src/types/*",
    "src/bars.json"
  ],
  "exclude": [
    "node_modules",
    "src/test/**/*.spec.ts"
  ]
}